[user]
	name = Rogin Farrer
	SAM = rfarrer
[color]
	ui = true
	status = always
[push]
	default = current
[fetch]
	prune = true
[core]
	autocrlf = false
	preloadindex = true
	fscache = true
	excludesfile = /Users/rfarrer/.gitignore_global
	editor = nvim
	symlinks = true
	pager = delta

[delta]
	navigate = true # use n and N to move between diff sections
[log]
	decorate = short
[http]
	sslVerify = false
[pack]
	useSparse = true
[mergetool "vscode"]
        cmd = code --wait $MERGED
[mergetool]
	keepBackup = false
 	prompt = false
 	trustExitCode = true
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[include]
    path = ~/.gitconfig_local
[interactive]
    diffFilter = delta --color-only
[init]
	defaultBranch = main
[pull]
	rebase = false
[mergetool "diffconflicts"]
	cmd = nvim -c DiffConflicts \"$MERGED\" \"$BASE\" \"$LOCAL\" \"$REMOTE\"
	trustExitCode = true
  prompt = false
[merge]
	conflictStyle = diff3
	tool = diffconflicts
[diff]
	colorMoved = default
  tool = diffview
[difftool "diffview"]
  cmd = nvim -c DiffviewOpen
[difftool "nvimdiff"]
  cmd = nvim -d $LOCAL $REMOTE
